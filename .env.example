# Control AI Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# FIREBASE CONFIGURATION (for Google Authentication & Sync)
# =============================================================================
# Get these values from Firebase Console â†’ Project Settings
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
FIREBASE_APP_ID=your_app_id_here
FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# =============================================================================
# GEMINI API KEYS (AI Processing)
# =============================================================================
# Get these from Google AI Studio: https://aistudio.google.com/
# Different keys for different subscription tiers

# Free tier - Limited requests per day
GEMINI_FREE_KEY=your_gemini_free_api_key_here

# Pro tier - Higher limits and better performance
GEMINI_PRO_KEY=your_gemini_pro_api_key_here

# Master tier - Maximum limits and priority processing
GEMINI_MASTER_KEY=your_gemini_master_api_key_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment mode
NODE_ENV=development
# Options: development, production, test

# Logging level
LOG_LEVEL=info
# Options: error, warn, info, debug

# Application name (for window titles, etc.)
APP_NAME=Control AI

# Application version (for auto-updater)
APP_VERSION=1.0.0

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Backend server port (for local communication)
BACKEND_PORT=3001

# Frontend development server port
FRONTEND_PORT=3000

# Host for development servers
HOST=localhost

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Session secret for encryption
SESSION_SECRET=your_random_session_secret_here

# JWT secret for authentication
JWT_SECRET=your_random_jwt_secret_here

# Encryption key for sensitive data storage
ENCRYPTION_KEY=your_32_character_encryption_key

# API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FEATURES & INTEGRATIONS
# =============================================================================
# Enable/disable specific features
ENABLE_VOICE_INPUT=true
ENABLE_SCREENSHOTS=true
ENABLE_FILE_OPERATIONS=true
ENABLE_CLOUD_SYNC=true

# External service integrations
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode (shows additional logs and debug UI)
DEBUG_MODE=false

# Enable hot reload for development
HOT_RELOAD=true

# Source maps for debugging
SOURCE_MAPS=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test database URL
TEST_DATABASE_URL=sqlite::memory:

# Mock external APIs in tests
MOCK_APIS=true

# Test user credentials
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=test_password_123

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Google Analytics tracking ID
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Sentry error tracking DSN
SENTRY_DSN=your_sentry_dsn_here

# Custom analytics endpoint
ANALYTICS_ENDPOINT=https://api.control-ai.com/analytics

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# AI response timeout (milliseconds)
AI_TIMEOUT=30000

# Screenshot quality (1-100)
SCREENSHOT_QUALITY=90

# Maximum file size for uploads (MB)
MAX_FILE_SIZE=10

# Maximum concurrent AI requests
MAX_CONCURRENT_REQUESTS=3

# =============================================================================
# USER EXPERIENCE
# =============================================================================
# Default theme
DEFAULT_THEME=dark

# Default hotkeys
DEFAULT_HOTKEY_CHAT=CommandOrControl+Shift+C
DEFAULT_HOTKEY_SCREENSHOT=CommandOrControl+Shift+S
DEFAULT_HOTKEY_VOICE=CommandOrControl+Shift+V

# Animation settings
ENABLE_ANIMATIONS=true
ANIMATION_DURATION_MS=300

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Gemini API base URL
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta

# Request timeout for Gemini API
GEMINI_TIMEOUT=30000

# Model to use for different tiers
GEMINI_FREE_MODEL=gemini-1.5-flash
GEMINI_PRO_MODEL=gemini-1.5-pro
GEMINI_MASTER_MODEL=gemini-1.5-pro

# =============================================================================
# BUILD & DEPLOYMENT
# =============================================================================
# Build output directory
BUILD_DIR=dist

# Package name for distribution
PACKAGE_NAME=control-ai

# Developer certificate for macOS (if signing builds)
MAC_DEVELOPER_ID=Developer ID Application: Your Name (TEAM_ID)

# Windows certificate path
WINDOWS_CERT_PATH=./path/to/certificate.p12

# =============================================================================
# MISCELLANEOUS
# =============================================================================
# Custom user agent string
USER_AGENT=ControlAI/1.0.0

# Default language
DEFAULT_LANGUAGE=en

# Timezone for timestamps
TIMEZONE=UTC

# Cache directory
CACHE_DIR=./cache

# Logs directory
LOGS_DIR=./logs