{
  "name": "control-desktop-ai",
  "version": "1.0.0",
  "description": "A sophisticated desktop application that combines AI-powered computer control with a modern user interface",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "test": "jest",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "electron",
    "ai",
    "computer-control",
    "automation",
    "gemini",
    "screenshot",
    "voice-control"
  ],
  "author": "Control AI Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.4",
    "firebase": "^10.4.0",
    "firebase-admin": "^13.6.0",
    "googleapis": "^166.0.0",
    "node-id3": "^0.2.6",
    "postcss": "^8.4.31",
    "python-shell": "^5.0.0",
    "speech-to-text-api": "^1.0.0",
    "tailwindcss": "^3.3.5"
  },
  "build": {
    "appId": "com.control.desktop.ai",
    "productName": "Control AI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "homepage": "https://github.com/control-ai/desktop"
}
